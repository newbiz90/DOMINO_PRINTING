<!-- views/chat/show.html.erb -->

<h1 class="text-center">Chat with GPT</h1>

<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="text-center">Enter Prompt:</h2>
    <%= form_with url: chat_path, method: :get do |form| %>
      <div class="form-group">
        <%= form.text_area :prompt, class: 'form-control autogrow chat-text-area', rows: 3, style: 'resize: vertical;', placeholder: 'Enter your prompt here...' %>
      </div>
      <div class="row">
        <div class="col">
          <%= form.submit 'Submit', class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @prompt.present? && @openai_response.present? %>
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <h2 class="text-center">Prompt:</h2>
      <pre class="code-response" style="white-space: pre-wrap;"><code><%= @prompt %></code></pre>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <h2 class="text-center">OpenAI Response:</h2>
      <pre class="code-response" style="white-space: pre-wrap;"><code><%= @openai_response['choices'][0]['message']['content'] %></code></pre>
    </div>
  </div>
<% end %>
