<!-- views/chat/show.html.erb -->

<h1>Chat with GPT</h1>

<div class="row">
  <div class="col-md-6">
    <h2>Enter Prompt:</h2>
    <%= form_with url: chat_path, method: :get do |form| %>
      <div class="form-group">
        <%= form.label :prompt %>
        <%= form.text_field :prompt, class: 'form-control' %>
      </div>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% if @prompt.present? && @openai_response.present? %>
  <div class="row mt-3">
    <div class="col-md-12">
      <h2>Prompt:</h2>
      <p><%= @prompt %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>OpenAI Response:</h2>
      <p><%= @openai_response['choices'][0]['message']['content'] %></p>
    </div>
  </div>
<% end %>
